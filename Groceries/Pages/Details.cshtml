@page
@model Groceries.Pages.DetailsModel

@{
    ViewData["Title"] = Model.Grocery.Name;
    string imagePath = "/uploads/" + Model.Grocery.ImageFileName;
}
<div class="row details">
    <div class="col-md-6">
        <div class="w-100">
            <img src="@imagePath" class="img-fluid" />
        </div>
    </div>


    <div class="col-md-6">
        <h3>@Model.Grocery.Name</h3>
        <h2>$@Model.Grocery.Price</h2>
        <p>@Model.Grocery.Description</p>
        <p>@Model.Grocery.PublishDate.ToString("D")</p>
        <form method="post">
            <input type="hidden" name="id" value="@Model.Grocery.Id" />
            <button type="submit" class="btn btn-secondary">Add to Cart</button>
            <button type="submit" class="btn btn-secondary">Continue Shopping</button>
        </form>
    </div>
</div>


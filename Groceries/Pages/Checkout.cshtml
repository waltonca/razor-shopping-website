@page
@model Groceries.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}
<h2>Checkout Page</h2>
<div class="row mt-5">
    <div class="col-lg-7 checkout-left">
        <h3>Payment Details</h3>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4 ">
                        <label asp-for="purchaseData.FirstName" class="form-control-label">First name</label>
                        <input asp-for="purchaseData.FirstName" type="text" class="form-control paymentFirstName"  >
                        
                        <span asp-validation-for="purchaseData.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="purchaseData.LastName" class="form-control-label" >Last name</label>
                        <input asp-for="purchaseData.LastName" type="text" class="form-control paymentLastName"  >
                        <span asp-validation-for="purchaseData.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-4">
                    <label asp-for="purchaseData.Address" class="form-control-label">Street</label>
                    <input asp-for="purchaseData.Address" type="text" class="form-control paymentStreet" placeholder="Street address or P.O. Box" >
                    <span asp-validation-for="purchaseData.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-4">
                    <label asp-for="purchaseData.Province" class="form-control-label" for="paymentProvince">Province</label>
                    <select asp-for="purchaseData.Province" class="form-select paymentProvince" id="paymentProvince"  >
                        <option value="">Select</option>
                        <option id="AB" value="AB">Alberta</option>
                        <option id="BC" value="BC">British Columbia</option>
                        <option id="MB" value="MB">Manitoba</option>
                        <option id="NB" value="NB">New Brunswick</option>
                        <option id="NL" value="NL">Newfoundland and Labrador</option>
                        <option id="NT" value="NT">Northwest Territories</option>
                        <option id="NS" value="NS" selected="">Nova Scotia</option>
                        <option id="NU" value="NU">Nunavut</option>
                        <option id="ON" value="ON">Ontario</option>
                        <option id="PE" value="PE">Prince Edward Island</option>
                        <option id="QC" value="QC">Quebec</option>
                        <option id="SK" value="SK">Saskatchewan</option>
                        <option id="YT" value="YT">Yukon</option>
                    </select>
                    <span asp-validation-for="purchaseData.Province" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="purchaseData.City" class="form-control-label" for="paymentCity">City</label>
                        <input asp-for="purchaseData.City" type="text" class="form-control paymentCity" id="paymentCity"   >
                        
                        <span asp-validation-for="purchaseData.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="purchaseData.PostalCode" class="form-control-label ca-states " for="paymentZipCode">Postal code</label>
                        <input asp-for="purchaseData.PostalCode" type="text" class="form-control paymentZipCode" id="paymentZipCode"  >
                        
                        <span asp-validation-for="purchaseData.PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-4">
                    <label asp-for="purchaseData.ccNumber" class="form-control-label" for="paymentCreditCardNumber">Credit Card Number</label>
                    <input asp-for="purchaseData.ccNumber" type="text" class="form-control paymentCreditCardNumber" id="paymentCreditCardNumber" placeholder="16-digits"   >
                    <span asp-validation-for="purchaseData.ccNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="purchaseData.ccExpiryDate" class="form-control-label" for="paymentExpiry">Expiry</label>
                        <input asp-for="purchaseData.ccExpiryDate" type="text" class="form-control paymentExpiry" id="paymentExpiry" placeholder="4-digits"  >
                        <span asp-validation-for="purchaseData.ccExpiryDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="purchaseData.cvv" class="form-control-label ca-states " for="paymentCVC">CVC</label>
                        <input asp-for="purchaseData.cvv" type="text" class="form-control paymentCVC" id="paymentCVC" placeholder="3-digits"   >
                        <span asp-validation-for="purchaseData.cvv" class="text-danger"></span>
                        <input type="hidden" asp-for="purchaseData.products" />
                    </div>
                </div>
            </div>
            <div>
                <input type="submit" value="Submit Order" class="btn btn-primary" />&nbsp;&nbsp;&nbsp;
                <a asp-page="./Index" class="btn btn-secondary">Continue Shopping</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4 checkout-right offset-lg-1">
        <h3>Order Summary</h3>
        
        <div class="order-total-summary" data-a8n="checkout_orderSummary_container">
            <div class="row subtotal-item">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Subtotal</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="sub-total fw-bold">$@Model.Subtotal</span></div>
                </div>
            </div>
            </div>
            <div class="row shipping-item">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Shipping</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="shipping-total-cost fw-bold">$@Model.Shipping</span></div>
                </div>
            </div>
            <div class="row tax-total-item ">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Tax</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="tax-total fw-bold">$@Model.Tax</span></div>
                </div>
            </div>
            <hr>
            <div class="row grand-total">
                <div class="col-6">
                    <div class="order-summary-heading">Total</div>
                </div>
                <div class="col-6">
                    <div class="order-summary-heading text-right"><span class="grand-total-sum fw-bold">$@Model.Total</span></div>
                </div>
            </div>
        </div>
    </div>
    
</div>

@page
@model Groceries.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}
<h2>Checkout Page</h2>
<div class="row mt-5">
    <div class="col-lg-7 checkout-left">
        <h3>Payment Details</h3>
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4 ">
                        <label class="form-control-label" for="paymentFirstName">First name</label>
                        <input type="text" class="form-control paymentFirstName" id="paymentFirstName" value="" name="paymentFirstName" required="" maxlength="45" pattern="^[A-Za-z0-9À-ÅÇ-ÖØ-åç-öø-ÿ \-',_;]+$">
                        <span class="text-danger">@Html.ValidationMessage("paymentFirstName")</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-control-label" for="paymentLastName">Last name</label>
                        <input type="text" class="form-control paymentLastName" id="paymentLastName" value="" name="paymentLastName" required="" maxlength="45" pattern="^[A-Za-z0-9À-ÅÇ-ÖØ-åç-öø-ÿ \-',_;]+$">

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-4">
                    <label class="form-control-label" for="paymentStreet">Street</label>
                    <input type="text" class="form-control paymentStreet" id="paymentStreet" placeholder="Street address or P.O. Box" value="" name="paymentStreet" required=""  maxlength="45" pattern="^[^$?%\x{22}\x{3C}\x{3E}\x{00FF}-\x{FFFF}]+$" >
                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-control-label" for="paymentCountry">Country</label>
                        <select class="form-select paymentCountry" id="paymentCountry" name="paymentCountry" required="">
                            <option value="">Select</option>
                            <option id="CA" value="CA" selected="">Canada</option>
                            <option id="US" value="US">United States</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-control-label" for="paymentProvince">Province</label>
                        <select class="form-select paymentProvince" id="paymentProvince" name="paymentProvince" required="">
                            <option value="">Select</option>
                            <option id="AB" value="AB">Alberta</option>
                            <option id="BC" value="BC">British Columbia</option>
                            <option id="MB" value="MB">Manitoba</option>
                            <option id="NB" value="NB">New Brunswick</option>
                            <option id="NL" value="NL">Newfoundland and Labrador</option>
                            <option id="NT" value="NT">Northwest Territories</option>
                            <option id="NS" value="NS" selected="">Nova Scotia</option>
                            <option id="NU" value="NU">Nunavut</option>
                            <option id="ON" value="ON">Ontario</option>
                            <option id="PE" value="PE">Prince Edward Island</option>
                            <option id="QC" value="QC">Quebec</option>
                            <option id="SK" value="SK">Saskatchewan</option>
                            <option id="YT" value="YT">Yukon</option>
                        </select>
                        <div class="invalid-feedback" id="defaultState"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-control-label" for="paymentCity">City</label>
                        <input type="text" class="form-control paymentCity" id="paymentCity" value="" name="paymentCity" required="" maxlength="45" minlength="2" pattern="^[^$?%\x{22}\x{3C}\x{3E}\x{00FF}-\x{FFFF}]+$" >
                        <div class="invalid-feedback" id="defaultCity"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-control-label ca-states " for="paymentZipCode">Postal code</label>
                        <input type="text" class="form-control paymentZipCode" id="paymentZipCode" value="" name="paymentZipCode" required="" maxlength="10" minlength="5" pattern="(^\d{5}(-\d{4})?$)|(^[abceghjklmnprstvxyABCEGHJKLMNPRSTVXY]{1}\d{1}[A-Za-z]{1} *\d{1}[A-Za-z]{1}\d{1}$)">
                        <div class="invalid-feedback" id="defaultZipCode"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-4">
                    <label class="form-control-label" for="paymentCreditCardNumber">Credit Card Number</label>
                    <input type="text" class="form-control paymentCreditCardNumber" id="paymentCreditCardNumber" placeholder="16-digits" value="" name="paymentCreditCardNumber" required="" maxlength="45" pattern="^\d{16}$">

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-control-label" for="paymentExpiry">Expiry</label>
                        <input type="text" class="form-control paymentExpiry" id="paymentExpiry" placeholder="4-digits" value="" name="paymentExpiry" required="" pattern="^\d{4}$">
                        <div class="invalid-feedback" id="defaultCity"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-control-label ca-states " for="paymentCVC">CVC</label>
                        <input type="text" class="form-control paymentCVC" id="paymentCVC" placeholder="3-digits" value="" name="paymentCVC" required="" pattern="^\d{3}$">
                        <div class="invalid-feedback" id="defaultZipCode"></div>
                        <span class="text-danger">@Html.ValidationMessage("paymentCVC")</span>
                    </div>
                </div>
            </div>
            <div>
                <input type="submit" value="Submit Order" class="btn btn-primary" />&nbsp;&nbsp;&nbsp;
                <a asp-page="./Index" class="btn btn-secondary">Continue Shopping</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4 checkout-right offset-lg-1">
        <h3>Order Summary</h3>
        
        <div class="order-total-summary" data-a8n="checkout_orderSummary_container">
            <div class="row subtotal-item">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Subtotal</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="sub-total fw-bold">$@Model.Subtotal</span></div>
                </div>
            </div>
            </div>
            <div class="row shipping-item">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Shipping</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="shipping-total-cost fw-bold">$@Model.Shipping</span></div>
                </div>
            </div>
            <div class="row tax-total-item ">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Tax</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="tax-total fw-bold">$@Model.Tax</span></div>
                </div>
            </div>
            <hr>
            <div class="row grand-total">
                <div class="col-6">
                    <div class="order-summary-heading">Total</div>
                </div>
                <div class="col-6">
                    <div class="order-summary-heading text-right"><span class="grand-total-sum fw-bold">$@Model.Total</span></div>
                </div>
            </div>
        </div>
    </div>
    
</div>

@page
@model Groceries.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}
<h2>Checkout Page</h2>
<div class="row">
    <div class="col-lg-8 checkout-left">
        <h3>Payment Details</h3>
        <form method="post">
            <label for="name">Name</label>
        </form>
    </div>
    <div class="col-lg-4 checkout-right">
        <h3>Order Summary</h3>
        
        <div class="order-total-summary" data-a8n="checkout_orderSummary_container">
            <div class="row subtotal-item">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Subtotal</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="sub-total fw-bold">$@Model.Subtotal</span></div>
                </div>
            </div>
            </div>
            <div class="row shipping-item">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Shipping</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="shipping-total-cost fw-bold">$@Model.Shipping</span></div>
                </div>
            </div>
            <div class="row tax-total-item ">
                <div class="col-6">
                    <div class="order-receipt-label mb-2">Tax</div>
                </div>
                <div class="col-6">
                    <div class="text-right mb-2"><span class="tax-total fw-bold">$@Model.Tax</span></div>
                </div>
            </div>
            <hr>
            <div class="row grand-total">
                <div class="col-6">
                    <div class="order-summary-heading">Total</div>
                </div>
                <div class="col-6">
                    <div class="order-summary-heading text-right"><span class="grand-total-sum fw-bold">$@Model.Total</span></div>
                </div>
            </div>
            <hr>
        </div>
    </div>
</div>
<p><a asp-page="./Cart" class="btn btn-secondary">Back to Cart</a></p>